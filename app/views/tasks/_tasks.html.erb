<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          
          <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        
        <% if @task.user.id == @current.user.id %>
        <div>
          <p>ステータス：<%= task.status %></p>
          <p>タスク：<%= task.content %></p>
         <%= link_to '編集する', edit_task_path(@task) %>
        </div>
        
        <% end %>
        
      </div>
    </li>
  <% end %>

</ul>